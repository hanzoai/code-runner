{
  "name": "@hanzo/hanzo-tools-runner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hanzo-tools-runner/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "cwd": "libs/hanzo-tools-runner",
        "commands": [
          "npx copyfiles --up 4 --verbose ./../../dist/apps/*hanzo-tool-*/definition.json ./tools/",
          "cargo build"
        ],
        "parallel": false
      },
      "configurations": {
        "development": {},
        "production": {
          "args": ["--release"]
        }
      }
    },
    "test": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "cwd": "libs/hanzo-tools-runner",
        "command": "cargo test --features=built-in-tools -- --test-threads=1"
      },
      "configurations": {
        "development": {},
        "production": {
          "args": ["--release"]
        }
      }
    },
    "lint": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "cwd": "libs/hanzo-tools-runner",
        "command": "cargo clippy -- -D warnings"
      }
    },
    "publish": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "command": "cargo publish -p hanzo_tools_runner --allow-dirty"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    }
  }
}
